# $PUMP Faucet Configuration
# Copy this to .env and fill in your values

# Helius API Key (get one at https://helius.dev)
HELIUS_API_KEY=your_helius_api_key_here

# Faucet wallet private key (base58 encoded)
# This wallet must hold $PUMP tokens to distribute
FAUCET_PRIVATE_KEY=your_base58_private_key_here

# $PUMP Token mint address (SPL token)
PUMP_TOKEN_MINT=your_pump_token_mint_address_here

# Amount of $PUMP to give per claim (in smallest units)
# If token has 9 decimals, 10000000000 = 10 tokens
PUMP_AMOUNT=10000000000

# hCaptcha keys (get at https://www.hcaptcha.com)
HCAPTCHA_SITE_KEY=your_hcaptcha_site_key_here
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key_here

# Server port
PORT=3000
